" Dorian's XVimrc
set relativenumber
set number
" Get current file path upto directory
cnoremap %% <C-R>=expand('%:h').'/'<cr>
" Switch between last two files
set showcmd
set showmatch

set ignorecase
set smartcase
set hlsearch
set incsearch
" Clear syntax highlighting with enter
nnoremap <CR> :nohlsearch<CR><CR>
set cursorline
set wildmenu

noremap <C-l> <C-w>l
noremap <C-h> <C-w>h
noremap <C-j> <C-w>j
noremap <C-k> <C-w>k
